<%= form_for @architect do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true, :required => true %>
  <%= f.label :nationality %>
  <%= f.text_field :nationality %>
  <%= f.label :dob, "Date of birth" %>
  <%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>
  <%= f.label :famous %>
  <%= f.text_field :famous %>
  <%= f.label :image %>
  <%= f.url_field :image %>
  <%= f.submit %>
<% end %>
